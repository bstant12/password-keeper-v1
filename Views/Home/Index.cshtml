<style>
    h5{
        margin: 0px;
    }
    span {
        color: red;
    }
</style>

@model User

@{
    ViewData["Title"] = "Gate Keeper - Register";
}

<div class="container">

    <div class="row">
        <div class="col">
            <h1> Gate Keeper</h1>
        </div>

        <div class="text-right col align-middle">
            <br>
            <a asp-action="Login" asp-controller="Home">Login</a>
        </div>
    </div>

    <hr>
    <h2>Register: </h2>

    <br>

    <form asp-action="Register" asp-controller="Home" method="POST">
        
        <div class="form-group">
            <span asp-validation-for="FirstName"></span>
            <h5><label asp-for="FirstName"></label></h5>
            <input class="form-control form-control-lg" asp-for="FirstName">
        </div>

        <div class="form-group">
            <span asp-validation-for="LastName"></span>
            <h5><label asp-for="LastName"></label></h5>
            <input class="form-control form-control-lg" asp-for="LastName">
        </div>

        <div class="form-group">
            <span asp-validation-for="Email"></span>
            <h5><label asp-for="Email"></label></h5>
            <input class="form-control form-control-lg" asp-for="Email">
        </div>

        <div class="form-group">
            <span asp-validation-for="Password"></span>
            <h5><label asp-for="Password"></label></h5>
            <input class="form-control form-control-lg" asp-for="Password">
        </div>

        <div class="form-group">
            <span asp-validation-for="ConfirmPassword"></span>
            <h5><label asp-for="ConfirmPassword"></label></h5>
            <input class="form-control form-control-lg" asp-for="ConfirmPassword">
        </div>

        <div>
            <button type="submit" class="btn btn-primary"><h5>REGISTER</h5></button>
        </div>
    </form>

</div>

